{
  "id": "travel_assistant_v1",
  "name": "Travel Assistant Chatbot",
  "description": "A chatbot that provides travel offers, weather info, and restaurant recommendations.",
  "start_block": "welcome",
  "blocks": {
    "welcome": {
      "id": "welcome",
      "type": "write_message",
      "message": "Hi! I'm your Travel Assistant. How can I help you today?",
      "next": "wait_for_user"
    },
    "wait_for_user": {
      "id": "wait_for_user",
      "type": "wait_for_response",
      "next": "detect_user_intent"
    },
    "detect_user_intent": {
      "id": "detect_user_intent",
      "type": "detect_intent",
      "intents": [
        {
          "name": "weather",
          "examples": [
            "What's the weather?",
            "Tell me the weather forecast",
            "Give me the weather"
          ],
          "next": "weather_info"
        },
        {
          "name": "travel_offers",
          "examples": [
            "Show me travel offers",
            "Any flight discounts?",
            "Vacation deals"
          ],
          "next": "travel_offer_info"
        },
        {
          "name": "restaurant_recommendations",
          "examples": [
            "Recommend a restaurant",
            "Where should I eat?",
            "Find restaurants nearby"
          ],
          "next": "restaurant_info"
        }
      ],
      "fallback_next": "unknown_intent"
    },
    "weather_info": {
      "id": "weather_info",
      "type": "write_message",
      "message": "Sure! Please tell me which city you'd like the weather for.",
      "next": "wait_for_user"
    },
    "travel_offer_info": {
      "id": "travel_offer_info",
      "type": "write_message",
      "message": "Great! I can show you some amazing travel deals. Do you have a preferred destination?",
      "next": "wait_for_user"
    },
    "restaurant_info": {
      "id": "restaurant_info",
      "type": "write_message",
      "message": "I know some great places! Which cuisine are you in the mood for?",
      "next": "wait_for_user"
    },
    "unknown_intent": {
      "id": "unknown_intent",
      "type": "write_message",
      "message": "Sorry, I didnâ€™t quite get that. Could you rephrase?",
      "next": "wait_for_user"
    }
  }
}
